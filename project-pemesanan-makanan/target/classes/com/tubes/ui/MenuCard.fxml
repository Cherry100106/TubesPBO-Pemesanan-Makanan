<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tubes.ui.MenuCardController"
            fx:id="cardRoot"
            prefWidth="180" prefHeight="220"
            style="-fx-background-color: white;
                   -fx-background-radius: 12;
                   -fx-border-radius: 12;
                   -fx-border-color: #ddd;
                   -fx-padding: 15;
                   -fx-cursor: hand;">

    <VBox spacing="8"
          alignment="CENTER"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <ImageView fx:id="imgPhoto"
                   fitWidth="100"
                   fitHeight="80"
                   preserveRatio="true"
                   style="-fx-background-color: #eee; -fx-background-radius: 8;" />

        <Label fx:id="txtNama"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <Label fx:id="txtHarga"
               style="-fx-font-size: 14px;" />

        <Label fx:id="txtStatus"
               style="-fx-font-size: 12px; -fx-text-fill: #777;" />

    </VBox>

</AnchorPane>
