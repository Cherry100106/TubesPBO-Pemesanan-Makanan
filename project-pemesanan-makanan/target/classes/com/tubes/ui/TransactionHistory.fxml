<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.tubes.ui.TransactionHistoryController" 
            prefWidth="1100" prefHeight="700">

    <stylesheets>
        /style.css
    </stylesheets>

    <top>
        <HBox style="-fx-padding: 20;">
            <Label text="Histori Transaksi"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <TableView fx:id="tableTransaksi" prefHeight="600" styleClass="history-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID Transaksi" prefWidth="150"/>
                    <TableColumn fx:id="colNama" text="Nama Pemesan" prefWidth="250"/>
                    <TableColumn fx:id="colTotal" text="Total Harga" prefWidth="200"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>