<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tubes.ui.MenuController"
            prefWidth="1100" prefHeight="700">

    <top>
        <HBox style="-fx-padding: 20;">
            <Label text="Daftar Menu Makanan"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 10 20 20 20;">

            <Button text="Tambah Menu" fx:id="btnTambahMenu"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 8 15;" />

            <!-- FIXED: ScrollPane tidak menghalangi mouse -->
            <ScrollPane fx:id="scrollContainer"
                        fitToWidth="true"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        style="-fx-background-color: transparent;">

                <FlowPane fx:id="menuContainer"
                          hgap="20" vgap="20"
                          prefWidth="1000">

                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                </FlowPane>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
