<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      spacing="30"
      style="-fx-padding: 30 20 20 20;">

    <HBox alignment="CENTER" spacing="25">

        <VBox style="-fx-background-color: #1976d2; -fx-padding: 20; -fx-background-radius: 10;"
              prefWidth="250" alignment="CENTER">
            <Label text="Pesanan Hari Ini" style="-fx-text-fill: white;" />
            <Label text="0" style="-fx-text-fill: white; -fx-font-size: 26px;" />
        </VBox>

        <VBox style="-fx-background-color: #373d53; -fx-padding: 20; -fx-background-radius: 10;"
              prefWidth="250" alignment="CENTER">
            <Label text="Pendapatan" style="-fx-text-fill: white;" />
            <Label text="Rp 0" style="-fx-text-fill: white; -fx-font-size: 26px;" />
        </VBox>

        <VBox style="-fx-background-color: #1976d2; -fx-padding: 20; -fx-background-radius: 10;"
              prefWidth="250" alignment="CENTER">
            <Label text="Menu Habis" style="-fx-text-fill: white;" />
            <Label text="0" style="-fx-text-fill: white; -fx-font-size: 26px;" />
        </VBox>

    </HBox>

    <VBox spacing="10" prefWidth="800">
        <Label text="5 Pesanan Terakhir"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TableView prefHeight="240">
            <columns>
                <TableColumn text="ID" prefWidth="80"/>
                <TableColumn text="Nama Pemesan" prefWidth="200"/>
                <TableColumn text="Total" prefWidth="150"/>
                <TableColumn text="Status" prefWidth="150"/>
                <TableColumn text="Waktu" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
