<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tubes.ui.MainLayoutController"
            prefWidth="1200" prefHeight="700">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="18" prefWidth="240"
              style="-fx-background-color: #373d53; -fx-padding: 28;">

            <Label text="Kasir App"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />

            <Separator />

            <Button text="Dashboard" fx:id="btnDashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px;" />

            <Button text="Kelola Pesanan" fx:id="btnOrder"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px;" />

            <Button text="Menu Makanan" fx:id="btnMenu"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px;" />

            <Button text="Histori Transaksi" fx:id="btnReport"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px;" />
        </VBox>
    </left>

    <!-- HEADER -->
    <top>
        <HBox fx:id="headerArea"
              style="-fx-background-color: #1976d2; -fx-padding: 18;">
            <Label fx:id="headerTitle"
                   text="Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <AnchorPane fx:id="contentArea"/>
    </center>

</BorderPane>
