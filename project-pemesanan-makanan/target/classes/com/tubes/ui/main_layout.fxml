<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tubes.ui.MainLayoutController"
            prefWidth="1200" prefHeight="700">

    <stylesheets>
        /style.css
    </stylesheets>

    <left>
        <VBox spacing="5" prefWidth="240"
              style="-fx-background-color: #373d53; -fx-padding: 28 0;"> 

            <Label text="Kasir App"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 0 28;"/>

            <Separator style="-fx-padding: 0 28;"/>

            <Button text="Dashboard" fx:id="btnDashboard"
                    styleClass="nav-button-base, hover-btn"/>

            <Button text="Kelola Pesanan" fx:id="btnOrder"
                    styleClass="nav-button-base, hover-btn"/>

            <Button text="Histori Transaksi" fx:id="btnReport"
                    styleClass="nav-button-base, hover-btn"/>
        </VBox>
    </left>

    <top>
        <HBox style="-fx-background-color: #1976d2; -fx-padding: 18;">
            <Label fx:id="headerTitle"
                   text="Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <AnchorPane fx:id="contentArea"/>
    </center>

</BorderPane>