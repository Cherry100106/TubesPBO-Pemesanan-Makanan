<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.tubes.ui.OrderController"
            prefWidth="960" prefHeight="650"> 

    <stylesheets>
        /style.css
    </stylesheets>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">

            <VBox spacing="10" VBox.vgrow="ALWAYS" HBox.hgrow="NEVER" prefWidth="480">
                <Label text="Daftar Menu"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <TableView fx:id="tableMenu"
                           VBox.vgrow="ALWAYS"
                           prefWidth="480"
                           maxWidth="480"
                           minWidth="480"
                           styleClass="table-menu">
                    <columns>
                        <TableColumn fx:id="colNamaMenu" text="Nama" prefWidth="160"/>
                        <TableColumn fx:id="colHarga" text="Harga" prefWidth="100"/>
                        <TableColumn fx:id="colKategori" text="Kategori" prefWidth="140"/>
                        <TableColumn fx:id="colAvailable" text="Status" prefWidth="85"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Label text="Jumlah:"/>
                    <TextField fx:id="inputQty" prefWidth="60"/>

                    <Button fx:id="btnAdd" text="Tambah ke Keranjang"
                            style="-fx-background-color:#1976d2; -fx-text-fill:white;"
                            styleClass="hover-blue"/>
                </HBox>
            </VBox>

            <VBox spacing="10" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                
                <HBox spacing="10" alignment="CENTER_LEFT"> 
                    <Label text="Nama Pelanggan:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="inputNamaPelanggan" prefWidth="200" HBox.hgrow="ALWAYS"/>
                </HBox>
                <Label text="Keranjang"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <TableView fx:id="tableCart"
                           VBox.vgrow="ALWAYS" 
                           HBox.hgrow="ALWAYS"
                           styleClass="table-cart">
                    <columns>
                        <TableColumn fx:id="colCartNama" text="Menu" prefWidth="160"/>
                        <TableColumn fx:id="colCartQty" text="Qty" prefWidth="50"/>
                        <TableColumn fx:id="colCartSubtotal" text="Subtotal" prefWidth="140"/>
                        <TableColumn fx:id="colCartAksi" text="Aksi" prefWidth="75" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="labelTotal" text="Total: Rp 0"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding:20;">
            <Button fx:id="btnKonfirmasi"
                    text="Cetak Struk"
                    style="-fx-background-color:#1976d2; -fx-text-fill:white; -fx-padding:12 20;"
                    styleClass="hover-blue"/>
        </HBox>
    </bottom>

</BorderPane>