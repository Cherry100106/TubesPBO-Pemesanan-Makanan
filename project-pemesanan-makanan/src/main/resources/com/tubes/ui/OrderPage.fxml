<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tubes.ui.OrderController">
        
    <top>
        <HBox spacing="10" style="-fx-padding: 20;">
            <Label text="Nama Pelanggan:" />
            <TextField fx:id="inputNamaPelanggan" promptText="Contoh: Budi" prefWidth="250"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;"
              HBox.hgrow="ALWAYS">

            <!-- Daftar Menu -->
            <VBox spacing="10"
                VBox.vgrow="ALWAYS"
                HBox.hgrow="NEVER"
                prefWidth="480">

                <Label text="Daftar Menu"
                    style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <TableView fx:id="tableMenu"
                        VBox.vgrow="ALWAYS"
                        prefWidth="480"
                        maxWidth="480"
                        minWidth="480">

                    <columns>
                        <TableColumn fx:id="colNamaMenu" text="Nama" prefWidth="160" />
                        <TableColumn fx:id="colHarga" text="Harga" prefWidth="100" />
                        <TableColumn fx:id="colKategori" text="Kategori" prefWidth="140" />
                        <TableColumn fx:id="colAvailable" text="Status" prefWidth="85" />
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Label text="Jumlah:" />
                    <TextField fx:id="inputQty" prefWidth="60"/>
                    <Button text="Tambah ke Keranjang" fx:id="btnAdd"
                            style="-fx-background-color: #1976d2; -fx-text-fill: white;" />
                </HBox>
            </VBox>

            <!-- Keranjang -->
            <VBox spacing="10"
                  VBox.vgrow="ALWAYS"
                  HBox.hgrow="ALWAYS">

                <Label text="Keranjang"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <TableView fx:id="tableCart"
                           VBox.vgrow="ALWAYS"
                           HBox.hgrow="ALWAYS">

                    <columns>
                        <TableColumn fx:id="colCartNama" text="Menu" prefWidth="160"/>
                        <TableColumn fx:id="colCartQty" text="Qty" prefWidth="50"/>
                        <TableColumn fx:id="colCartSubtotal" text="Subtotal" prefWidth="140"/>
                        <TableColumn fx:id="colCartAksi" text="Aksi" prefWidth="75"/>
                    </columns>
                </TableView>

                <Label text="Total: Rp 0"
                       fx:id="labelTotal"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 20;">
            <Button text="Cetak Struk" fx:id="btnKonfirmasi"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;
                           -fx-padding: 12 20; -fx-font-size: 15px;" />
        </HBox>
    </bottom>

</BorderPane>
