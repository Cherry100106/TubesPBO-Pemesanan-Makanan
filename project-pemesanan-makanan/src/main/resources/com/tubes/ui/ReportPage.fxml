<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tubes.ui.ReportController"
            prefWidth="1100" prefHeight="700">

    <!-- HEADER -->
    <top>
        <HBox style="-fx-padding: 20;">
            <Label text="Laporan Penjualan"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- FILTER -->
            <HBox spacing="10">
                <Label text="Rentang Tanggal:" style="-fx-font-size: 14px;" />

                <DatePicker fx:id="tanggalMulai" />
                <Label text="sampai" />
                <DatePicker fx:id="tanggalSelesai" />

                <Button text="Tampilkan"
                        fx:id="btnFilter"
                        style="-fx-background-color: #1976d2; -fx-text-fill: white;" />
            </HBox>

            <!-- TABLE -->
            <TableView fx:id="tableLaporan" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="150" />
                    <TableColumn fx:id="colTotalOrder" text="Jumlah Order" prefWidth="150" />
                    <TableColumn fx:id="colPendapatan" text="Pendapatan" prefWidth="200" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
