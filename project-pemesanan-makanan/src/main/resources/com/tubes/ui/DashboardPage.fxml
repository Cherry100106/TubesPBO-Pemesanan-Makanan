<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tubes.ui.DashboardController"
      spacing="30"
      style="-fx-padding: 30 20 20 20;">

    <stylesheets>
        <String fx:value="/style.css"/>
    </stylesheets>

    <HBox alignment="CENTER" spacing="25">

        <VBox style="-fx-background-color: #373d53; -fx-padding: 20; -fx-background-radius: 10;"
              prefWidth="300" alignment="CENTER">
            <Label text="Transaksi Hari Ini" style="-fx-text-fill: white;"/>
            <Label fx:id="txtOrderToday" text="0"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        </VBox>

        <VBox style="-fx-background-color: #373d53; -fx-padding: 20; -fx-background-radius: 10;"
              prefWidth="300" alignment="CENTER">
            <Label text="Pendapatan Hari Ini" style="-fx-text-fill: white;"/>
            <Label fx:id="txtIncomeToday" text="Rp 0"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        </VBox>

    </HBox>

    <HBox alignment="CENTER" spacing="25">

        <VBox style="-fx-background-color: #373d53; -fx-padding: 20; -fx-background-radius: 10;"
              prefWidth="300" alignment="CENTER">
            <Label text="Total Porsi Terjual" style="-fx-text-fill: white;"/>
            <Label fx:id="txtTotalItems" text="0"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        </VBox>

        <VBox style="-fx-background-color: #373d53; -fx-padding: 20; -fx-background-radius: 10;"
              prefWidth="300" alignment="CENTER">
            <Label text="Menu Terlaris" style="-fx-text-fill: white;"/>
            <Label fx:id="txtBestSeller" text="-"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </VBox>

    </HBox>

</VBox>