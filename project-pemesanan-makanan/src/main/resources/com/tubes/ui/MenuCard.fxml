<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tubes.ui.MenuCardController"
            prefWidth="180" prefHeight="240"
            pickOnBounds="true"
            style="-fx-background-color: white; -fx-background-radius: 12;
                   -fx-border-radius: 12; -fx-border-color: #ddd;
                   -fx-padding: 10; -fx-cursor: hand;">

    <VBox alignment="TOP_CENTER" spacing="10">

        <Label fx:id="txtNama" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="txtHarga" style="-fx-font-size: 14px;"/>
        <Label fx:id="txtStatus" style="-fx-font-size: 12px;"/>

    </VBox>

</AnchorPane>
