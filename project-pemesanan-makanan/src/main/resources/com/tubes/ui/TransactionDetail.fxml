<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tubes.ui.TransactionDetailController"
      spacing="15" style="-fx-padding: 20;">

    <Label fx:id="labelId"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label fx:id="labelTanggal" />

    <TableView fx:id="tableDetail" prefHeight="300">
        <columns>
            <TableColumn fx:id="colMenu" text="Menu" prefWidth="200"/>
            <TableColumn fx:id="colQty" text="Qty" prefWidth="80"/>
            <TableColumn fx:id="colHarga" text="Harga Satuan" prefWidth="120"/>
            <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="120"/>
        </columns>
    </TableView>

    <Label fx:id="labelTotal"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

</VBox>